
@{
    var pageTitle = ViewBag.Title as string ?? "Mushy Pharmacy";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@pageTitle</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />


    <link rel="stylesheet" href="@Url.Content("~/css/mushy-pharmacy.webflow.e6d885423.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")" />


    <script>
        (function (o, c) {
          var n = c.documentElement, t = " w-mod-";
          n.className += t + "js";
          ("ontouchstart" in o || (o.DocumentTouch && c instanceof DocumentTouch)) &&
            (n.className += t + "touch");
        })(window, document);
    </script>


    @RenderSection("HeadExtra", required: false)
</head>
<body>

    @* HEADER *@
    @Html.Partial("~/Views/Shared/header.cshtml")


    @* PAGE CONTENT *@
    <main role="main">
        @RenderBody()
    </main>

    @* FOOTER *@
    @Html.Partial("~/Views/Shared/footer.cshtml")

    <!-- Scripts -->
    <script src="@Url.Content("~/js/jquery-3.5.1.min.js")"></script>
    <script src="@Url.Content("~/js/webflow.js")"></script>


    <!-- Hide top-nav on scroll, keep floating bar -->
    <script>
        (function () {
          var lastY = window.pageYOffset || document.documentElement.scrollTop || 0;
          var locker = false;
          var THRESH = 16;
          var DESKTOP = window.matchMedia('(min-width: 992px)');

          function apply(dir){
            // включаем только на десктопе
            if (!DESKTOP.matches){
              document.documentElement.classList.remove('scrolling-down','scrolling-up');
              return;
            }
            if (dir === 'down'){
              document.documentElement.classList.add('scrolling-down');
              document.documentElement.classList.remove('scrolling-up');
            } else if (dir === 'up'){
              document.documentElement.classList.add('scrolling-up');
              document.documentElement.classList.remove('scrolling-down');
            }
          }

          function onScroll(){
            if (locker) return;
            locker = true;
            requestAnimationFrame(function(){
              var y = window.pageYOffset || document.documentElement.scrollTop || 0;
              if (y > lastY + THRESH) { apply('down'); lastY = y; }
              else if (y < lastY - THRESH) { apply('up'); lastY = y; }
              locker = false;
            });
          }

          window.addEventListener('scroll', onScroll, { passive: true });
          window.addEventListener('resize', function(){ apply('up'); }, { passive: true });
          apply('up');
        })();
    </script>


    @RenderSection("Scripts", required: false)
</body>
</html>

                    <img id="status-image" src="" alt="Status Image" />
                    <span id="hours-status" class="cta-text">Checking opening status...</span>
                    <script>
                        function updateOpeningStatus() {
                            var openingStatusElement = document.getElementById("hours-status");
                            var statusImageElement = document.getElementById("status-image");

                            // Get the current date and time
                            var now = new Date();
                            var dayOfWeek = now.getDay(); // 0 = Sunday, 1 = Monday, ..., 6 = Saturday
                            var hour = now.getHours();

                            // Define business hours
                            var businessHours = {
                                weekdays: { start: 9, end: 19 },
                                friday: { morningStart: 9, morningEnd: 11.5, afternoonStart: 13, afternoonEnd: 19 },
                                saturday: { start: 10, end: 15 }
                            };

                            // Check if the current time falls within business hours
                            var isOpenNow = false;

                            if (dayOfWeek >= 1 && dayOfWeek <= 4) {
                                isOpenNow = hour >= businessHours.weekdays.start && hour < businessHours.weekdays.end;
                            } else if (dayOfWeek === 5) {
                                isOpenNow = (hour >= businessHours.friday.morningStart && hour < businessHours.friday.morningEnd) ||
                                             (hour >= businessHours.friday.afternoonStart && hour < businessHours.friday.afternoonEnd);
                            } else if (dayOfWeek === 6) {
                                isOpenNow = hour >= businessHours.saturday.start && hour < businessHours.saturday.end;
                            }

                            // Update the opening status text and image
                            if (isOpenNow) {
                                openingStatusElement.textContent = "Open Now";
                                statusImageElement.src = "images/opened.svg";
                            } else {
                                openingStatusElement.textContent = "Closed Now";
                                statusImageElement.src = "images/closed.svg";
                            }
                        }

                        // Call the function immediately after defining it
                        updateOpeningStatus();

                        // Set interval to update every 10 seconds
                        setInterval(updateOpeningStatus, 10000);
                    </script>

                </div>
